# Environment
ENVIRONMENT=development

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=./mlruns
MLFLOW_BACKEND_STORE_URI=postgresql://mlflow:mlflow@localhost:5432/mlflow
MODEL_NAME=fraud_classifier
MODEL_STAGE=Production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=mlflow
DB_PASSWORD=mlflow
DB_NAME=mlflow

# MinIO/S3 Configuration (for local development)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_ENDPOINT_URL=http://localhost:9000
S3_BUCKET_NAME=mlops-fraud-detection

# AWS Configuration (for production)
# AWS_REGION=us-east-1
# AWS_ACCOUNT_ID=123456789012

# Airflow Configuration
AIRFLOW_HOME=./airflow
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@localhost:5432/airflow
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=True
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_LOG_LEVEL=info

# Model Configuration
FRAUD_THRESHOLD=0.5
BATCH_SIZE=32
MAX_FEATURES=50

# Monitoring Configuration
DRIFT_THRESHOLD=0.15
DRIFT_SEVERE_THRESHOLD=0.2
PERFORMANCE_THRESHOLD=0.75
MONITORING_INTERVAL=3600  # seconds

# Alerting Configuration
ENABLE_SLACK_ALERTS=False
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ENABLE_EMAIL_ALERTS=False
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=alerts@example.com

# Data Generation Configuration
DATA_SIZE=100000
FRAUD_RATE=0.01  # 1% fraud rate

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
